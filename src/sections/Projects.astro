---
import Button from '@/components/Button.astro'
// import GithubRepoCard from '../components/GithubRepoCard.astro'
import GithubRepoCard from '@/components/vue/GithubRepoCard.vue'
import { socialMediaLinks } from '@/data/portfolio'
import type { GHProfile } from '@/types/github'

interface Props {
  prof: GHProfile
}

const { prof } = Astro.props
---

<div class="flex flex-col gap-2 md:gap-4" id="opensource">
  <h1 class="text-3xl md:text-5xl">Open Source Projects</h1>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    {prof.pinnedItems.edges.map(({ node }) => <GithubRepoCard data={node} />)}
  </div>
  <Button text={'More Projects'} href={socialMediaLinks.github} new-tab={true} />
</div>
